@using MvcOnlineTicariOtomasyon.Models.Classes;
@model List<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Faturalar</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Seri No
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam Tutar</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.InvoiceID</td>
    <td>@k.InvoiceSerialNumber</td>
    <td>@k.InvoiceQueueNumber</td>
    <td>@k.InvoiceTaxAdministration</td>
    <td>@k.InvoiceDate</td>
    <td>@k.InvoiceHour</td>
    <td>@k.InvoiceDeliveryPerson</td>
    <td>@k.InvoiceReciever</td>
    <td>@k.Total</td>
    <td><a href="/Invoice/GetInvoice/@k.InvoiceID" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Invoice/InvoiceDetails/@k.InvoiceID" class="btn btn-default" style="background-color:lightcoral; color:white;">Detay</a></td>
</tr>
    }
</table>
<a href="/Invoice/AddInvoice/" class="btn btn-info">Yeni Fatura Ekle</a>


