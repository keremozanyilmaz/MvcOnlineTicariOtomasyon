@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Kategori Listesi</h2>
<table class="table table-bordered" style="margin-top:20px; margin-left:20px;">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var c in Model)
    {


<tr>
    <td>
        @c.CategoryID
    </td>
    <td>
        @c.CategoryName
    </td>
    <td><a href="/Category/DeleteCategory/@c.CategoryID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Category/GetCategory/@c.CategoryID" class="btn btn-success">Güncelle</a></td>
</tr>
    }
</table>
<a href="/Category/AddCategory" style="margin-top:10px; margin-left:20px;" class="btn btn-primary">Yeni Kategori</a>

