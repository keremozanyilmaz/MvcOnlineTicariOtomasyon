@using MvcOnlineTicariOtomasyon.Models.Classes;
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departmanlar</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>DEPARTMAN</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.DepartmentID</td>
            <td>@k.DepartmentName</td>
            <td><a href="/Department/DeleteDepartment/@k.DepartmentID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Department/GetDepartment/@k.DepartmentID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Department/DepartmentDetails/@k.DepartmentID" class="btn btn-default" style="background-color:lightcoral; color:white;">Detay</a></td>
        </tr>
    }
</table>
<a href="/Department/AddDepartment/" class="btn btn-info">Yeni Departman Ekle</a>

