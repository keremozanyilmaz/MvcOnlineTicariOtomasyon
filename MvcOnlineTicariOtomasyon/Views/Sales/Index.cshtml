@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satışlar</h2>
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>

        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>

    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.SalesMovementsID</td>
            <td>@k.Product.ProductName</td>
            <td>@k.Current.CurrentName @k.Current.CurrentSurname</td>
            <td>@k.Employee.EmployeeName @k.Employee.EmployeeSurname</td>
            <td>@k.SalesMovementQuantity</td>
            <td>@k.SalesMovementPrice</td>
            <td>@k.SalesMovementTotalAmount</td>
            <td>@k.SalesMovementDate</td>
            <td><a href="/Sales/GetSale/@k.SalesMovementsID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Sales/SaleDetail/@k.SalesMovementsID" class="btn btn-default" style="background-color:lightcoral; color:white;">Detay</a></td>
        </tr>
    }
</table>
<a href="/Sales/AddSales/" class="btn btn-info">Yeni Satış Yap</a>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

$('#tbl1').dataTable({});

</script>

