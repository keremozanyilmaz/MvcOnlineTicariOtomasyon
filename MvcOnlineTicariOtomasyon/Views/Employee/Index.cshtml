@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Personeller</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.EmployeeID</td>
            <td>@k.EmployeeName</td>
            <td>@k.EmployeeSurname</td>
            <td>@k.EmployeeImage</td>
            <td>@k.Department.DepartmentName</td>
            <td><a href="/Employee/GetEmployee/@k.EmployeeID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Department/DepartmantEmployeeSale/@k.EmployeeID" class="btn btn-default" style="background-color:lightcoral; color:white;">Detay</a></td>
        </tr>
    }
</table>
<a href="/Employee/AddEmployee/" class="btn btn-info">Yeni Personel Ekle</a>
