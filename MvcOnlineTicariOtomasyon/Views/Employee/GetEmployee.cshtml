@model MvcOnlineTicariOtomasyon.Models.Classes.Employee
@{
    ViewBag.Title = "GetEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Personel Güncelleme</h2>
<br />
@using(Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.EmployeeID)
    @Html.Label("Personel Adı")
    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
    <br />
    @Html.Label("Personel Soyadı")
    @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
    <br />
    @Html.Label("Personel Görsel")
    @Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })
    <br />
    @Html.Label("Personel Departman")
    @Html.DropDownListFor(x => x.Departmentid, (List<SelectListItem>)ViewBag.vl1, new { @class = "form-control" })
    <br />
    <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>

</div>
}

